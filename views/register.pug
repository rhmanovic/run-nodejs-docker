extends layout

block content
  .container.mt-md-4.pt-4
    .row.justify-content-md-center
      .col-md-6.col-md-offset-3.text-center
        h1.display-4.m-b-2 Creat an Account
        
        // register form
        form.mt-4(method='POST' action='/register')
          div.form-group.row
            label.col-sm-2.col-form-label.text-left(for='name') Name:
            .col-sm-10
              input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group.row
            label.col-sm-2.col-form-label.text-left(for='email') Email:
            .col-sm-10
              input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group.row
            label.col-sm-2.col-form-label.text-left(for='pw') Password:
            .col-sm-10
              input#pw.form-control(type='password' name='password')
          div.form-group.row
            label.col-sm-2.col-form-label.text-left(for='pw2') Confirm Password:
            .col-sm-10.parent
              input#pw2.form-control.child(type='password' name='confirmPassword')
          button.btn.btn-primary.btn-block.custom-box-shadow(type='submit') Sign up

        p.mt-2 Already have an account? 
          a(href='../login') Log In  
        
        .embed-responsive.embed-responsive-16by9
          iframe#ddd.embed-responsive-item(src= "",controls,autoplay="false", allowfullscreen)
        button#bbb.btn.btn-primary(type='') Ajax


