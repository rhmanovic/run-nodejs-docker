    title= theLanguage.title

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='x-ua-compatible', content='ie=edge')

    script(src='https://code.jquery.com/jquery-3.4.1.min.js')
