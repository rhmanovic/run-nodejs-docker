    // link(rel='stylesheet', href='/stylesheets/main/register.css')
    link(rel='stylesheet', href='/stylesheets/main/navbar.css')
    link(rel='stylesheet', type="text/css", href='/timepicker/css/bootstrap-timepicker.min.css')

      
