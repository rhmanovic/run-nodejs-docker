
doctype html(lang=websiteLanguage)
html(dir=websiteLanguage === 'ar' ? 'rtl' : 'ltr')
  head
    - var defaultLanguage = "en"
    - var websiteLanguage = choosedLanguage || defaultLanguage
    - var theLanguage = language && language.language ? language.language[websiteLanguage] : language.language.en
