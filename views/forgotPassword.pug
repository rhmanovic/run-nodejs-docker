extends layout

block content
  .container.mt-md-4.pt-4
    .row.justify-content-md-center
      .col-md-6.col-md-offset-3.text-center
        h1.display-4.m-b-2 Resset Password
        
        // register form
        form.mt-4(method='POST' action='/sendResetEmail')
          div.form-group.row
            label.col-sm-2.col-form-label.text-left(for='email') Email:
            .col-sm-10
              input#email.form-control(type='email', placeholder='name@email.com' name='email')
          button.btn.btn-primary.btn-block.custom-box-shadow(type='submit') Resset Password

        p.mt-2 Or 
          a(href='../login') Log In  