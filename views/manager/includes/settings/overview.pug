    tbody
      tr.align-middle
        td.col-4
          p (ICO)
          p الأيقونة
          p.text-secondary (العرض والطول الموصى بهما: - 71px:71px*)
        td.col-8
          .col.col-md-4.align-middle
            img.border.border-4.my-4(src=merchant.images.ico || 'https://via.placeholder.com/350', alt='Store Icon (ICO)', style='height: 71px;')
          input.form-control(type='file', name='ico', accept='image/png, image/jpeg')
          button.btn.btn-primary.btn-labeled(type='submit')
            .fa.fa-save
            span.mx-1 حفظ

      tr.align-middle
        td.col-4
          p الشعار (JPG/PNG)
          p.text-secondary (العرض والطول الموصى بهما: - 350px:350px*)
        td.col-8
          .col.col-md-4.align-middle
            img.border.border-4.my-4(src=merchant.images.logo || 'https://via.placeholder.com/350', alt='Store Logo (JPG/PNG)', style='height: 350px;')
          input.form-control(type='file', name='logo', accept='image/png, image/jpeg')
          button.btn.btn-primary.btn-labeled(type='submit')
            .fa.fa-save
            span.mx-1 حفظ

      tr.align-middle
        td.col-4
          p الشعار (JPG/PNG)
          p.text-secondary (العرض والطول الموصى بهما: - 350px:350px*)
        td.col-8
          .col.col-md-4.align-middle
            img.border.border-4.my-4(src=merchant.images.logoAdditional || 'https://via.placeholder.com/1920x1080', alt='Additional Store Logo (JPG/PNG)', style='height: 300px;')
          input.form-control(type='file', name='logo_additional', accept='image/png, image/jpeg')
          button.btn.btn-primary.btn-labeled(type='submit')
            .fa.fa-save
