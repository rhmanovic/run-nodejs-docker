        td.col-8
          .col.col-md-4.align-middle
            img.border.border-4.my-4(src=merchant.images.background || 'https://via.placeholder.com/533x1080', alt='Product List Background (JPG/PNG)', style='height: 300px;')
          input.form-control(type='file', name='background', accept='image/png, image/jpeg')
          button.btn.btn-primary.btn-labeled(type='submit')
            .fa.fa-save
            span.mx-1 حفظ

      tr.align-middle
        td.col-4
          p (ICO)
          p الأيقونة
          p.text-secondary (العرض والطول الموصى بهما: - 71px:71px*)
        td.col-8
          .col.col-md-4.align-middle
            img.border.border-4.my-4(src=merchant.images.icoSecondary || 'https://via.placeholder.com/150', alt='Secondary Store Icon (ICO)', style='height: 150px;')
          input.form-control(type='file', name='ico_secondary', accept='image/png, image/jpeg')
          button.btn.btn-primary.btn-labeled(type='submit')
            .fa.fa-save
            span.mx-1 حفظ

.row
  #page-title.d-flex.justify-content-between.align-items-center.px-3.py-2

.col.d-flex.justify-content-end
  button.btn.btn-primary.btn-labeled.mx-2(type='submit')
    .fa.fa-save
    span= " حفظ "

script.
  document.getElementById('bigform').addEventListener('submit', function (event) {
    const maxSize = 2 * 1024 * 1024; // 2 MB in bytes
    const inputs = this.querySelectorAll('input[type="file"]');
    for (let input of inputs) {
      if (input.files[0] && input.files[0].size > maxSize) {
        alert(`The file "${input.files[0].name}" exceeds the 2 MB size limit.`);
        event.preventDefault(); // Prevent form submission
        return;
      }
    }
  });
