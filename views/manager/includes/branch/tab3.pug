

// Define the table with class attributes for styling
table.table.table-bordered.table-striped.table-hover
  tbody
    // Array of days in Arabic
    - var days = ["الأحد", "الإثنين", "الثلاثاء", "الأربعاء", "الخميس", "الجمعة"]
    each day, index in days
      tr.align-middle
        td
          .row
            .col.text-center
              span= day
            .col
              label.switch
                input(type='checkbox', class='sw1', id=`pub_${index}`, data-id=index, checked)
                span.switch-slider.round
        td
          .row
            .col
              span ساعات العمل
            .col
              if index === 0
                button.btn.btn-primary.mx-1.mb-1(onclick="applyToAll()")
                  i.fas.fa-share
                  span= " تطبيق على الكل"
          .row.mt-2
            .col.col-lg-4              
              .input-group.bootstrap-timepicker.timepicker
                input.timepicker1.form-control(type="text")
            .col.col-lg-4
              .input-group.bootstrap-timepicker.timepicker
                input.timepicker1.form-control(type="text")
              //input.form-control(type="time", name=`end_${day}`, placeholder="HH:MM")
          .row.mt-4
            span فترة الاستراحة
          .row.mt-2
            .col.col-lg-4
              .input-group.bootstrap-timepicker.timepicker
                input.timepicker1.form-control(type="text")
              
            .col.col-lg-4
              .input-group.bootstrap-timepicker.timepicker
                input.timepicker1.form-control(type="text")
              
          .row.mt-4