extends layout

block content
  .main
    - var products = [{ }, { }, { }, { }]
    .row.min-vh-100.m-0




      .col.background-main
        .row
          #page-title.d-flex.justify-content-between.align-items-center.px-3.py-2
            h1.page-header.text-overflow.col-md-8 الطلبات - أسم العميل


            .col.d-flex.justify-content-end
              a.btn.btn-primary.btn-labeled.mx-2(href='/manager/customers')
                .fa.fa-list
                span= " ادارة العملاء "

        .row.px-2
          .card
            .card-body
              .row.d-flex.justify-content-end
                .col-2
                  input.form-control(placeholder="بحث")
              .row.mt-2
                .container
                  table.table.table-bordered.table-striped.table-hover
                    thead
                      tr
                        th.align-middle.col-1(scope="col") كود الطلب
                        th.align-middle(scope="col") العميل
                        th.align-middle(scope="col") طريقة الإستلام /الوقت المقدر
                        th.align-middle(scope="col") الفرع/المنطقة
                        th.align-middle.col-1(scope="col") العنوان
                        th.align-middle.col-3(scope="col") طريقة الدفع
                        th.align-middle.col-3(scope="col") حالة التوصيل	
                        th.align-middle.col-3(scope="col") المجموع
                        th.align-middle.col-3(scope="col") تاريخ الإضافة
                    tbody
                      td.align-middle.text-center(colspan='9') لا توجد سجلات

                      

                    

            .row
              #page-title.d-flex.justify-content-between.align-items-center.px-3.py-2
        
        
                .col.d-flex.justify-content-end
                  button.btn.btn-primary.btn-labeled.mx-2
                    .fa.fa-save
                    span= " حفظ "