extends layout

block content
  .container.clearfix.mt-4
    .row.justify-content-center
      .col-md-8.col-md-offset-2
        
          if KentStatus == "CAPTURED"
            .card.border-success.text-success.align-items-center
              .card-body
                .text-center.my-3
                  i.fas.fa-check-circle.display-1
                  h1 تم الدفع وتسجيل الطلب بنجاح
                  h3=  `رقم الطلب: ${orderNo}`  
                  br
                  br
                  br                 
                  a.btn.btn-primary(href='/cart') العودة للعربة

          if KentStatus == "CANCELLED"
            .card.border-danger.text-danger.align-items-center
              .card-body
                .text-center.my-3
                  i.fas.fa-ban.display-1
                  h1 عملية الدفع ملغية
                  h3=  `رقم الطلب: ${orderNo}`   
                  br
                  br
                  br                 
                  a.btn.btn-primary(href='/cart') العودة للعربة

          if KentStatus == "FAILED"
            .card.border-danger.text-danger.align-items-center
              .card-body
                .text-center.my-3
                  i.fas.fa-times.display-1
                  h1 لم تتم عملية الدفع
                  h3=  `رقم الطلب: ${orderNo}`   
                  br
                  br
                  br                 
                  a.btn.btn-primary(href='/cart') العودة للعربة



