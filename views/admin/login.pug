
extends layout

block content
  .container
    .row.justify-content-center.align-items-center.min-vh-100
      .col-md-6.col-lg-4
        .card.shadow
          .card-body
            h3.text-center.mb-4 Admin Login
            form(action='/admin/login', method='post')
              .mb-3
                label.form-label(for='email') Email
                input#email.form-control(type='email', name='email', required)
              .mb-3
                label.form-label(for='password') Password
                input#password.form-control(type='password', name='password', required)
              .d-grid.gap-2
                button.btn.btn-primary(type='submit') Login
